<?xml version="1.0" encoding="UTF-8"?>
<api xmlns="http://ws.apache.org/ns/synapse" name="Books" context="/books">
    <resource methods="GET">
        <inSequence>
            <!-- Use base URL in the endpoint -->
            <send>
                <endpoint>
                    <http method="GET" uri-template="$env:BASE_URL/books"/>
                </endpoint>
            </send>
        </inSequence>
        <outSequence>
            <send/>
        </outSequence>
        <faultSequence/>
    </resource>
</api>
